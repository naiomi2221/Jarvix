<Window x:Class="Jarvix.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="JARVIS" Height="400" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" WindowStartupLocation="CenterScreen"
        Visibility="Hidden">

    <Window.Resources>
        <Storyboard x:Key="FlowAnimation">
            <DoubleAnimation Storyboard.TargetName="InnerGrid" Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" From="0" To="360" Duration="0:0:10" RepeatBehavior="Forever" />
            <DoubleAnimation Storyboard.TargetName="MidGrid" Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" From="360" To="0" Duration="0:0:15" RepeatBehavior="Forever" />
            <DoubleAnimation Storyboard.TargetName="OuterGrid" Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" From="0" To="360" Duration="0:0:20" RepeatBehavior="Forever" />
        </Storyboard>

        <Storyboard x:Key="TalkingEffect">
            <DoubleAnimation Storyboard.TargetName="MainContainerScale" Storyboard.TargetProperty="ScaleX"
                             From="1.0" To="1.05" Duration="0:0:0.8" AutoReverse="True" RepeatBehavior="Forever" />
            <DoubleAnimation Storyboard.TargetName="MainContainerScale" Storyboard.TargetProperty="ScaleY"
                             From="1.0" To="1.05" Duration="0:0:0.8" AutoReverse="True" RepeatBehavior="Forever" />

            <ColorAnimation Storyboard.TargetName="LineBrush" Storyboard.TargetProperty="Color"
                            To="White" Duration="0:0:0.5" AutoReverse="True" RepeatBehavior="Forever" />

            <DoubleAnimation Storyboard.TargetName="Wave1Scale" Storyboard.TargetProperty="ScaleY"
                             From="0.2" To="1.2" Duration="0:0:0.15" AutoReverse="True" RepeatBehavior="Forever" />
            <DoubleAnimation Storyboard.TargetName="Wave2Scale" Storyboard.TargetProperty="ScaleY"
                             From="0.2" To="1.8" Duration="0:0:0.12" AutoReverse="True" RepeatBehavior="Forever" />
            <DoubleAnimation Storyboard.TargetName="Wave3Scale" Storyboard.TargetProperty="ScaleY"
                             From="0.2" To="1.2" Duration="0:0:0.2" AutoReverse="True" RepeatBehavior="Forever" />
        </Storyboard>
    </Window.Resources>

    <Grid MouseLeftButtonDown="Window_MouseLeftButtonDown">
        <Canvas Width="300" Height="300" RenderTransformOrigin="0.5,0.5">
            <Canvas.RenderTransform>
                <ScaleTransform x:Name="MainContainerScale" ScaleX="1" ScaleY="1"/>
            </Canvas.RenderTransform>

            <Ellipse Width="200" Height="200" Canvas.Left="50" Canvas.Top="50" Fill="#052233">
                <Ellipse.Effect>
                    <BlurEffect Radius="50"/>
                </Ellipse.Effect>
            </Ellipse>

            <Grid Width="200" Height="200" Canvas.Left="50" Canvas.Top="50" x:Name="InnerGrid" RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <RotateTransform/>
                </Grid.RenderTransform>
                <Ellipse StrokeThickness="1" Opacity="0.5" Margin="30,5,30,5">
                    <Ellipse.Stroke>
                        <SolidColorBrush x:Name="LineBrush" Color="#00FFFF" />
                    </Ellipse.Stroke>
                </Ellipse>
            </Grid>

            <Grid Width="220" Height="220" Canvas.Left="40" Canvas.Top="40" x:Name="MidGrid" RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <RotateTransform/>
                </Grid.RenderTransform>
                <Ellipse Stroke="#00CCFF" StrokeThickness="0.8" Opacity="0.4" Margin="5,20,5,20"/>
            </Grid>

            <Grid Width="250" Height="250" Canvas.Left="25" Canvas.Top="25" x:Name="OuterGrid" RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <RotateTransform/>
                </Grid.RenderTransform>
                <Ellipse Stroke="#00FFFF" StrokeThickness="1.5" Opacity="0.7" Margin="60,0,60,0">
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="10" Color="Cyan" ShadowDepth="0"/>
                    </Ellipse.Effect>
                </Ellipse>
            </Grid>

            <Ellipse Width="40" Height="40" Canvas.Left="130" Canvas.Top="130" Fill="Cyan">
                <Ellipse.Effect>
                    <BlurEffect Radius="20"/>
                </Ellipse.Effect>
            </Ellipse>
        </Canvas>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Height="40" HorizontalAlignment="Center">
                <Rectangle Width="4" Height="30" Fill="Cyan" Margin="2" RadiusX="2" RadiusY="2" RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <ScaleTransform x:Name="Wave1Scale" ScaleY="0.2"/>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <Rectangle Width="4" Height="50" Fill="Cyan" Margin="2" RadiusX="2" RadiusY="2" RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <ScaleTransform x:Name="Wave2Scale" ScaleY="0.2"/>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <Rectangle Width="4" Height="30" Fill="Cyan" Margin="2" RadiusX="2" RadiusY="2" RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <ScaleTransform x:Name="Wave3Scale" ScaleY="0.2"/>
                    </Rectangle.RenderTransform>
                </Rectangle>
            </StackPanel>

            <TextBlock x:Name="StatusText" Text="J.A.R.V.I.S." Foreground="White" 
                       HorizontalAlignment="Center" Margin="0,10,0,0"
                       FontFamily="Segoe UI Light" FontSize="12">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="5" Color="Cyan" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>